<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/backcolor"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxHeight="90dp"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/finalans"

        android:background="@color/backcolor"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
       />

    <TextView
        android:id="@+id/finalans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/backcolor"
        android:maxHeight="90dp"
        android:textColor="#999898"
        android:textSize="40sp"
        android:padding="2dp"
        android:layout_above="@+id/linear"
        android:layout_marginBottom="10dp"
        android:text="0" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/cutone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/gr6"
                android:padding="2dp"
                android:text="x"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/openbrace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr5"
                android:text="(" />
            <Button
                android:id="@+id/closebrace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr5"
                android:text=")" />
            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr4"
                android:text="/" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="7" />
            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="8" />
            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="9" />
            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr4"
                android:text="*" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="4" />
            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="5" />
            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="6" />
            <Button
                android:id="@+id/subtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr4"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="1" />
            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="2" />
            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="3" />
            <Button
                android:id="@+id/addition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr4"
                android:text="+" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/allclear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr2"
                android:text="AC" />
            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="0" />
            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/buttonback"
                android:text="." />
            <Button
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/gr3"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
